<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/citiesSearchFragment">

    <fragment
        android:id="@+id/citiesSearchFragment"
        android:name="br.pedroso.citieslist.features.citiessearch.CitiesSearchFragment"
        android:label="CitiesSearchFragment"
        tools:layout="@layout/fragment_cities_search">
        <action
            android:id="@+id/openCityMapFragment"
            app:destination="@id/cityMapFragment" />
    </fragment>

    <fragment
        android:id="@+id/cityMapFragment"
        android:name="br.pedroso.citieslist.features.citymap.CityMapFragment"
        android:label="CityMapFragment"
        tools:layout="@layout/fragment_city_map">
        <argument
            android:name="city"
            app:argType="br.pedroso.citieslist.domain.entities.City" />
    </fragment>

</navigation>
